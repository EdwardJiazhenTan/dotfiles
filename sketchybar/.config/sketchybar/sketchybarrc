#!/bin/bash

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar position=top height=22 blur_radius=0 color=0x00000000 \
  y_offset=7 margin=10 padding_left=0 padding_right=0
sketchybar --bar display=all
sketchybar --add event aerospace_workspace_change

##### Changing Defaults #####
default=(
  padding_left=5
  padding_right=5
  icon.font="Hack Nerd Font:Bold:15.0"
  label.font="Hack Nerd Font:Bold:15.0"
  icon.color=0xff88C0D0
  label.color=0xffECEFF4
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
  background.color=0xff4C566A
  background.corner_radius=5
  background.height=22
)
sketchybar --default "${default[@]}"

##### Left Side Items #####
sketchybar --add item aerospace left \
  --subscribe aerospace aerospace_workspace_change \
  --set aerospace \
  background.padding_left=1 \
  background.padding_right=5 \
  icon.padding_left=8 \
  icon.padding_right=2 \
  label.padding_right=8 \
  update_freq=2 \
  script="$PLUGIN_DIR/aerospace.sh"

sketchybar --add item input_method left \
  --set input_method \
  background.padding_left=5 \
  background.padding_right=5 \
  icon=󰌌 \
  icon.padding_left=8 \
  icon.padding_right=8 \
  label.padding_right=8 \
  update_freq=3 \
  script="$PLUGIN_DIR/input_method.sh"

sketchybar --add item front_app left \
  --set front_app \
  background.padding_left=5 \
  background.padding_right=5 \
  icon=">" \
  icon.padding_left=8 \
  icon.padding_right=4 \
  label.padding_right=8 \
  script="$PLUGIN_DIR/front_app.sh" \
  --subscribe front_app front_app_switched

##### Center Left Item (Now Playing) #####
# DISABLED: Blocking osascript calls cause freezing during browser switches
# sketchybar --add item now_playing left \
#   --set now_playing \
#   background.padding_left=5 \
#   background.padding_right=5 \
#   icon="󰎆" \
#   icon.padding_left=8 \
#   icon.padding_right=4 \
#   label.padding_right=8 \
#   update_freq=5 \
#   script="$PLUGIN_DIR/now_playing.sh"

##### Right Side Items #####
# DISABLED: Blocking network calls (curl) cause 2-13s lag on first browser switch
# when cache is stale. Eliminates first-time lag when opening/switching to Zen.
# sketchybar --add item weather right \
#   --set weather \
#   background.padding_left=5 \
#   background.padding_right=1 \
#   icon="󰖐" \
#   icon.padding_left=8 \
#   icon.padding_right=4 \
#   label.padding_right=8 \
#   update_freq=1800 \
#   script="$PLUGIN_DIR/weather.sh"

sketchybar --add item volume right \
  --set volume \
  background.padding_left=5 \
  background.padding_right=5 \
  label.padding_right=8 \
  script="$PLUGIN_DIR/volume.sh" \
  --subscribe volume volume_change

sketchybar --add item battery right \
  --set battery \
  background.padding_left=5 \
  background.padding_right=5 \
  label.padding_right=8 \
  update_freq=120 \
  script="$PLUGIN_DIR/battery.sh" \
  --subscribe battery system_woke power_source_change

sketchybar --add item clock right \
  --set clock \
  background.padding_left=5 \
  background.padding_right=5 \
  icon="󰔠" \
  icon.padding_left=8 \
  icon.padding_right=8 \
  label.padding_right=8 \
  update_freq=10 \
  script="$PLUGIN_DIR/clock.sh"

##### Force all scripts to run the first time #####
sketchybar --update
